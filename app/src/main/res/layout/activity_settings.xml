<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="c.nyaringitab.teamtesla.SettingsActivity">

    <ImageView
        android:id="@+id/settings_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="56dp"
        app:srcCompat="@mipmap/default_avatar" />

    <TextView
        android:id="@+id/settings_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Display Name"
        android:textSize="25sp" />

    <Button
        android:id="@+id/settings_image_btn"
        android:layout_width="140dp"
        android:layout_height="45dp"
        android:layout_marginTop="39dp"
        android:text="CHANGE IMAGE"
        android:layout_below="@+id/settings_status"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/status_save_btn"
        android:layout_width="140dp"
        android:layout_height="45dp"
        android:layout_marginTop="17dp"
        android:text="CHANGE STATUS"
        android:layout_below="@+id/settings_image_btn"
        android:layout_alignLeft="@+id/settings_image_btn"
        android:layout_alignStart="@+id/settings_image_btn" />

    <TextView
        android:id="@+id/settings_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Hi there, I'm Using Green App"
        android:textSize="15sp"
        android:layout_below="@+id/settings_name"
        android:layout_alignRight="@+id/settings_image"
        android:layout_alignEnd="@+id/settings_image" />

</RelativeLayout>
